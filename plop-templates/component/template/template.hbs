<script lang="ts">
import { Ref, ref, defineComponent } from 'vue';

export default defineComponent({
  name: '{{ properCase name }}',

  props: {},

  setup() {
    const state: Ref<string> = ref('hello world');

    return {
      state,
    };
  },
});
</script>
